{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // Ambiente do Node/Next.js moderno
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "esnext",

    // Tipos necessÃ¡rios
    "types": ["node"],

    // Outros outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Checagens mais seguras
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,

    // Comportamento de JSX do Next
    "jsx": "preserve",

    // ðŸš« REMOVIDO: "verbatimModuleSyntax" (causava erro no build)
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,

    // Configs usuais
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
